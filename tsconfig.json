{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",          // Ahora la raíz es la carpeta raíz del proyecto
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": ["features/**/*.ts", "steps/**/*.ts", "src/**/*.ts"]
}