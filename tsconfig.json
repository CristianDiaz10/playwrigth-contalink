{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",          // Carpeta raíz de código fuente
    "outDir": "dist",          // Carpeta donde se compilarán archivos JS
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]       // Incluye todos los archivos TS dentro de src
}